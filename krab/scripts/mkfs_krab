#!/bin/sh
. options

if [ $# -ne 3 ]; then
	echo "Usage: $0 <disk> <start-zone> <size>"
	exit 1
fi

diskid=$1
off=$2
sz=$3

last=`echo "ibase=8;$sz-1"|bc -l`
last=`printf "%04o\n" $last`

off=`echo "ibase=8;$off"|bc -l`
off=`printf "%04o\n" $off`

cat <<qq >$tf1
ШИФР 419999^
ОЗУ 3^
ЛЕНТ 30($diskid_krab-ЗП)^
ВХОД 1^
ВРЕ 2^
РОСП 0^
ЕВ1
К 00 010 0010 15 31 00020
К 00 070 0011 00 22 00000
К 00 070 0012 00 22 00000
К 00 070 0013 00 22 00000
К 00 074 0000 00 22 00000
В10
С 0000 0000 0030 $off
С 0000 0100 0030 0000
С 0000 0100 0030 0001
С 0000 0200 0030 0002
В20
К 00 012 0000 00 050 7702
К 16 044 0014 00 031 0100
К 14 000 0007 00 050 0156
К 14 012 0010 14 27 00005
К 14 010 0007 14 020 0011
К 14 021 0012 14 000 0007
К 14 010 0007 00 050 0112
К 15 30 00000 00 22 00000
С 0
С 1
С 77 7740
С 77 0177
В2000
С 7777 7777 7777 7777
С 0000 0000 0000 $last
С 7777 7777 7777 7777
ЕКОНЕЦ
qq
cat $tf1|$conv>$tf2
dispak $tf2
